<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".OrderActivity">

        <!-- Judul Halaman -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Food"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Input Nama Makanan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

                <!-- ImageView untuk Gambar Makanan -->
                <ImageView
                    android:id="@+id/ivFoodImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/batagor"
                    android:layout_marginEnd="8dp"/>

                <!-- TextView untuk Nama Makanan -->
                <TextView
                    android:id="@+id/etFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter food name - Get From List"
                    android:padding="12dp"/>
                <!-- Menambahkan Tampilan Harga -->
                <TextView
                    android:id="@+id/tvFoodPriceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvFoodPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <!-- Input Jumlah Porsi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Servings"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etServings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter number of servings"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Input Nama Pemesan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordering Name"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ordering name by"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Input Catatan Tambahan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Notes"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter any additional notes"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <!-- Tombol Order -->
        <Button
            android:id="@+id/btnOrder"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            android:text="Place Order"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@color/logo_color"/>

        <!-- Tombol Back -->
        <Button
            android:id="@+id/btnBack"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:text="Back"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@color/logo_color"/>

</LinearLayout>
